<div class="main_header">
  <div class="group">
    <div class="group-name">
      hayatoroom
    </div>
  </div>
  <div class="chat_exit">
    <div class="chat_botton">
       <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="main">
  <div class="messages">
    <div class="user">Hayato<span class="datetime">2021/05/14</span></div>
    <div class="message">ありがとう</div>
  </div>

  <div class="messages">
    <div class="user">Takashi<span class="datetime">2021/05/14</span></div>
    <div class="message">テストです</div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
